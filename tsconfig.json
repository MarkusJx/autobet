{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "out",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "inlineSourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "autobetlib",
        "ui",
        "web",
        "docs",
        ".github",
        "web-ui"
    ]
}